<!DOCTYPE html>
<html>
  <head>
    <title>PitIn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "目標一覧", goals_path %>
      <%= link_to "目標作成", new_goal_path %>
      <%= link_to "Montlyプラン", monthly_plans_path %>
      <%= link_to "Weeklyプラン", weekly_plans_path %>
      <%= link_to "Dailyプラン", daily_plans_path %>
      <%= link_to "ToDo", todo_path %>
      <%= link_to "マイページ", new_user_registration_path %>
      <%= link_to "テスト", test_path %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
